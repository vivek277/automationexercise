<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite">
  <listeners>
  <listener class-name="utils.TestListeners"/>
  </listeners>
  <test name="ChromeTests" thread-count="5">
  <parameter name="os" value="Windows"/>
  <parameter name="browser" value="chrome"/>
    <classes>
      <class name="tests.HomeTest"/>
      <class name="tests.RegistrationTest"/>
      <class name="tests.LoginTest"/>
      <class name="tests.ProductTest"/>
      <class name="tests.ProductDetailsTest"/>
      <class name="tests.CheckoutTest"/>
    </classes>
  </test>
  
  <test name="EdgeTests" thread-count="5">
  <parameter name="os" value="Windows"/>
  <parameter name="browser" value="edge"/>
    <classes>
      <class name="tests.HomeTest"/>
      <class name="tests.RegistrationTest"/>
      <class name="tests.LoginTest"/>
      <class name="tests.ProductTest"/>
      <class name="tests.ProductDetailsTest"/>
      <class name="tests.CheckoutTest"/>
    </classes>
  </test>
  
  <test name="FirefoxTests" thread-count="5">
  <parameter name="os" value="Windows"/>
  <parameter name="browser" value="firefox"/>
    <classes>
      <class name="tests.HomeTest"/>
      <class name="tests.RegistrationTest"/>
      <class name="tests.LoginTest"/>
      <class name="tests.ProductTest"/>
      <class name="tests.ProductDetailsTest"/>
      <class name="tests.CheckoutTest"/>
    </classes>
  </test>
</suite> <!-- AutomationSuite -->
