<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="GroupTest">
  <listeners>
  <listener class-name="utils.TestListeners"/>
  </listeners>
  
  <test name="Smoketest">
  <parameter name="os" value="Windows"/>
  <parameter name="browser" value="chrome"/>
  <groups>
    <run>
      <include name="smoke"/>
    </run>
  </groups>
    <classes>
      <class name="tests.HomeTest"/>
      <class name="tests.RegistrationTest"/>
      <class name="tests.LoginTest"/>
      <class name="tests.ProductTest"/>
      <class name="tests.ProductDetailsTest"/>
      <class name="tests.CheckoutTest"/>
    </classes>
  </test>
</suite> <!-- AutomationSuite -->
